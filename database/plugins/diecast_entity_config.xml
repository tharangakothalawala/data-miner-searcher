<?xml version="1.0" encoding="UTF-8"?>

<!--
    Document   : configuration.xml
    Created on : March 19, 2013, 8:43 PM
    Author     : Tharanga
    Description:
	- The following meta data will be used to create the SQL.
	- Don't specify the tables if they don't have searchable attributes
	- You can include meta keywords within entity descriptions.
	  They are just words which are refering to any exisitng tables in the DB.
	  The meta description (implicit_annotation) will be used to recommend the user for the search categories.
-->

<database>
    <table>
        <table_name>4images_users</table_name>
        <key_concepts>Users</key_concepts>
        <implicit_annotation>This category or the table is about the users of the system.</implicit_annotation>
        <aliases>usr</aliases>
        <related_tables></related_tables>
        <searchable_attributes>user_name:this is the profile name,user_email</searchable_attributes>
    </table>
    <table>
        <table_name>4images_images</table_name>
        <key_concepts>Images</key_concepts>
        <implicit_annotation>This category or the table is about images</implicit_annotation>
        <aliases>img</aliases>
        <related_tables>4images_users</related_tables>
        <searchable_attributes>image_name:this is the image name,image_description,image_keywords</searchable_attributes>
    </table>
    <table>
        <table_name>4images_comments</table_name>
        <key_concepts>Comments</key_concepts>
        <implicit_annotation>This category or the table is about the comments done by users for stored images.</implicit_annotation>
        <aliases></aliases>
        <related_tables>4images_users</related_tables>
        <searchable_attributes>user_name:this is a user images,comment_headline:headline of the commnet. may contain images,comment_text:comment in details and this may contain images</searchable_attributes>
    </table>
</database>